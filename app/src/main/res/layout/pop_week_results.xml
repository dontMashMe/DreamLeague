<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_player_points_acq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pop_week_total_congrat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/txt_player_points_acq"
        app:layout_constraintEnd_toEndOf="@id/txt_player_points_acq"
        app:layout_constraintStart_toStartOf="@id/txt_player_points_acq" />

    <Button
        android:id="@+id/btn_weekres_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:rotation="-0"
        android:rotationY="0"
        android:text="@string/nastavi"
        android:background="@color/purple_500"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/txt_player_points_acq"
        app:layout_constraintStart_toStartOf="@id/txt_player_points_acq"
        app:layout_constraintTop_toBottomOf="@id/txt_player_points_acq" />
</androidx.constraintlayout.widget.ConstraintLayout>